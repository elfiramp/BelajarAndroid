<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.Menu_Utama"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">
<!--            <HorizontalScrollView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="100dp">-->
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="100dp"
                android:layout_height="120dp">
                <TextView
                    android:gravity="center"
                    android:text="Profile"
                    android:layout_width="100dp"
                    android:layout_height="15dp"/>

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/iconprofile" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="100dp"
                android:layout_height="120dp">
                <TextView
                    android:gravity="center"
                    android:text="Help"
                    android:layout_width="100dp"
                    android:layout_height="15dp"/>
                <ImageView
                    android:id="@+id/help"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/iconhelp"
                    android:layout_width="100dp"
                    android:layout_height="120dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="100dp"
                android:layout_height="120dp">
                <TextView
                    android:gravity="center"
                    android:text="Massage"
                    android:layout_width="100dp"
                    android:layout_height="15dp"/>
                <ImageView
                    android:id="@+id/massage"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/iconchating"
                    android:layout_width="100dp"
                    android:layout_height="120dp"/>
            </androidx.cardview.widget.CardView>
<!--            </HorizontalScrollView>-->
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Data Kosan"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:background="@drawable/m_button"
                        android:layout_marginRight="10dp"
                        android:text="Termurah"
                        android:layout_width="150dp"
                        android:layout_height="50dp"/>
                    <Button
                        android:background="@drawable/m_button"
                        android:layout_marginRight="10dp"
                        android:text="Termahal"
                        android:layout_width="150dp"
                        android:layout_height="50dp"/>
                    <Button
                        android:background="@drawable/m_button"
                        android:layout_marginRight="10dp"
                        android:text="Terdekat"
                        android:layout_width="150dp"
                        android:layout_height="50dp"/>
                    <Button
                        android:background="@drawable/m_button"
                        android:layout_marginRight="10dp"
                        android:text="Rating"
                        android:layout_width="150dp"
                        android:layout_height="50dp"/>
                </LinearLayout>
            </HorizontalScrollView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_kosan"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
