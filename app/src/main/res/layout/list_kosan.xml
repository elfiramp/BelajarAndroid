<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="@color/transparant"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content">
<!--    <androidx.cardview.widget.CardView-->
<!--        app:cardCornerRadius="15dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
<!--        -->
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp">
<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="150dp">-->
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/gambarkosan"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
<!--        </androidx.cardview.widget.CardView>-->

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/namakosan"
            android:layout_marginTop="10dp"
            android:text="Kosan Pondok Kedaton"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/alamatkosan"
            android:layout_marginTop="10dp"
            android:text="Jl. Sultan H., Kedaton, Kec. Kedaton, Kota Bandar"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/fasilitaskosan"
            android:layout_marginTop="10dp"
            android:text="kasur, lemari, kamar mandi dalam"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/hargakosan"
            android:layout_marginTop="10dp"
            android:text="Rp.1.500.000"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/durasikosan"
            android:layout_marginTop="10dp"
            android:text="minimal 6 bulan"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/no_hp_kosan"
            android:layout_marginTop="10dp"
            android:text="1234567890"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:text=""
            android:id="@+id/jarak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:text="Rating"
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/lihatlokasi"
            android:text="Lihat Lokasi"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/detail"
            android:text="Detail"
            android:layout_width="150dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/lihatrating"
            android:text="Lihat Rating"
            android:layout_width="150dp"
            android:layout_height="50dp"/>

    </LinearLayout>
<!--    </androidx.cardview.widget.CardView>-->
</LinearLayout>