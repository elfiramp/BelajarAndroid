<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@drawable/bckgroundijo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.TambahKosan">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/satu"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Input Kosan"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/mainTextDark"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:textStyle="bold"
            android:textColorHint="@color/mainTextDark"
            android:id="@+id/namakosan"
            android:layout_marginTop="10dp"
            android:hint="Nama Kosan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textStyle="bold"
            android:textColorHint="@color/mainTextDark"
            android:id="@+id/alamat"
            android:layout_marginTop="10dp"
            android:hint="Alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textStyle="bold"
            android:textColorHint="@color/mainTextDark"
            android:id="@+id/hargasewa"
            android:layout_marginTop="10dp"
            android:hint="Harga Sewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textStyle="bold"
            android:textColorHint="@color/mainTextDark"
            android:id="@+id/fasilitas"
            android:layout_marginTop="10dp"
            android:hint="Fasilitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textStyle="bold"
            android:textColorHint="@color/mainTextDark"
            android:id="@+id/durasisewa"
            android:layout_marginTop="10dp"
            android:hint="Durasi Sewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:textStyle="bold"
            android:textColorHint="@color/mainTextDark"
            android:id="@+id/telp"
            android:layout_marginTop="10dp"
            android:hint="No Telpon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/gambarkosan"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="120dp"/>

        <Button
            android:id="@+id/Pilih_gambar"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/m_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Pilih Gambar"/>
        <EditText
            android:id="@+id/namaGambar"
            android:layout_width="200dp"
            android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/pilihgambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/simpan"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/m_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Simpan"/>
            <Button
                android:id="@+id/batal"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/m_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Batal"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Dua"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/List_Kosan"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btntambahkosan"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/m_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="+ Tambah Kosan"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>